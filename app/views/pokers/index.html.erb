
<div class="container">
  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= form_tag('/pokers/single_hand', remote: true, class: 'form-inline') do %>
            <div class="form-group">
              <%= label_tag 'Cards' %>
              <%= text_field_tag 'cards', nil, placeholder: 'eg. C2 H4 H9 S10 C13', class: 'form-control' %>
            </div>
            <%= submit_tag 'Submit', class: 'btn btn-primary'%>
          <% end %>
        </div>
        <div class="panel-body" id="result"></div>
      </div>
    </div>

  </div>
</div>